@model IEnumerable<GuildCars.Models.Queries.GetSpecials>

@{
    ViewBag.Title = "Specials";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-12">
        @foreach (var special in Model)
        {
        <div class="col-md-12" id="specialsDiv">
            
            <div class="col-md-12" id="specialsDescriptDiv">
                <p class="specialsImage"><img src="@Url.Content("~/Images/Specials/dollar-sign.jpg")" style="float:left; padding-right:20px; padding-bottom: 20px" width="150" height="180" /></p>
                <p class="specials"><strong>@special.SpecialTitle</strong></p>
                <p class="specials">@special.SpecialDescription</p>
            </div>
        </div>
        }
    </div>
</div>

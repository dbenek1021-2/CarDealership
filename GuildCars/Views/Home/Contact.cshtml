@model GuildCars.Models.ContactUsViewModel

@{
    ViewBag.Title = "Contact Us";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "contactUsSubmit" }))
{
    <div class="form-group col-md-12">@Html.ValidationSummary()</div>
    <div class="form-row" id="contactUsDiv">
        <div class="form-group col-md-4">
            <label for="fname">Name</label><br />
            @Html.TextBoxFor(c => c.contactUs.Name, new { placeholder = "Name", @class = "form-control" })<br />
            <label for="lname">Email</label><br />
            @Html.TextBoxFor(c => c.contactUs.Email, new { placeholder = "ex. jdoe@gmail.com", @class = "form-control" })<br />
            <label for="phone">Phone</label><br />
            @Html.TextBoxFor(c => c.contactUs.Phone, new { placeholder = "ex. 111-111-1111", @class = "form-control" })<br />
            <label for="subject">Message</label><br />
            @Html.TextAreaFor(c => c.contactUs.Message, new { placeholder = "Enter message here...", @class = "form-control", @id = "message", @rows = "3" })<br />
            <button class="btn btn-primary">Submit</button>
        </div>
        <div class="form-group col-md-1"></div>
        <div class="form-group col-md-6" id="googleMapDiv">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d11938.008748284503!2d-81.4192754!3d41.5800175!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xc20dd1937d5640bc!2sSquire&#39;s%20Castle!5e0!3m2!1sen!2sus!4v1567020540989!5m2!1sen!2sus" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            <address>
                2844 River Rd<br />
                Willoughby Hills, OH 44094<br />
            </address>

            <address>
                <strong>Sales:</strong>(555) 555-3200<br />
                <strong>Service:</strong>(555) 555-3201
            </address>
        </div>
    </div>
}



@section Scripts
    {
    <script>
        if (typeof (Storage) !== null) {
            $('#message').val(sessionStorage.getItem("vin"));
            sessionStorage.clear();
        }
        else {
            sessionStorage.clear();
        }
    </script>
}